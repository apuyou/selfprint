

<ElementPanier>:
	orientation: "horizontal"
	height: 50
	Label:
		text: "%s (%s euros)" % (root.uv, root.prix)
		size_hint: (0.7, 1)
		halign: "left"
		valign: "bottom"
		font_size: 15
